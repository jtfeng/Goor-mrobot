<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.muye.assets.elevator.mapper.ElevatorModeMapper">

    <resultMap id="ElevatorMode" type="cn.mrobot.bean.assets.elevator.ElevatorMode">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="START" property="start" jdbcType="VARCHAR"/>
        <result column="END" property="end" jdbcType="VARCHAR"/>
        <result column="STATE" property="state" jdbcType="BIGINT"/>
    </resultMap>

    <select id="checkLegalRangeDate" resultType="java.lang.Long">
        SELECT count(*) FROM AS_ELEVATORMODE m
        WHERE (
                (#{param1} &lt;= m.START AND #{param2} &gt;= m.END)
                    OR
                ((m.START &lt;= #{param1} AND m.END &gt;= #{param1}) OR (m.START &lt;= #{param2} AND m.END &gt;= #{param2}))
              )
        AND m.ELEVATOR_ID = #{param3}
    </select>

    <select id="listElevatorModesByElevatorId" resultMap="ElevatorMode">
        SELECT * FROM AS_ELEVATORMODE WHERE ELEVATOR_ID = #{0} ORDER BY START ASC
    </select>

</mapper>